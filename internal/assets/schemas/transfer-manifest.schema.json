{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gonimbus/v1.0.0/transfer-manifest",
  "title": "Gonimbus Transfer Manifest",
  "description": "Configuration manifest for gonimbus transfer (copy/move) jobs",
  "type": "object",
  "required": [
    "version",
    "source",
    "target",
    "match",
    "transfer"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional schema reference for editor support"
    },
    "version": {
      "type": "string",
      "const": "1.0",
      "description": "Manifest schema version"
    },
    "source": {
      "$ref": "#/$defs/connection"
    },
    "target": {
      "$ref": "#/$defs/connection"
    },
    "match": {
      "$ref": "#/$defs/match"
    },
    "transfer": {
      "$ref": "#/$defs/transfer"
    },
    "output": {
      "$ref": "#/$defs/output"
    }
  },
  "$defs": {
    "connection": {
      "type": "object",
      "description": "Cloud storage connection configuration",
      "required": [
        "provider",
        "bucket"
      ],
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "s3"
          ],
          "description": "Storage provider type"
        },
        "bucket": {
          "type": "string",
          "minLength": 1,
          "description": "Bucket name"
        },
        "region": {
          "type": "string",
          "description": "AWS region (e.g., us-east-1)"
        },
        "endpoint": {
          "type": "string",
          "format": "uri",
          "description": "Custom endpoint URL for S3-compatible storage"
        },
        "profile": {
          "type": "string",
          "description": "AWS credential profile name"
        }
      }
    },
    "match": {
      "type": "object",
      "description": "Object matching configuration",
      "required": [
        "includes"
      ],
      "additionalProperties": false,
      "properties": {
        "includes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Glob patterns for objects to include"
        },
        "excludes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Glob patterns for objects to exclude"
        },
        "include_hidden": {
          "type": "boolean",
          "default": false,
          "description": "Include hidden files (starting with .)"
        }
      }
    },
    "preflight": {
      "type": "object",
      "description": "Preflight capability checks and provider probes (ENTARCH)",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "plan-only",
            "read-safe",
            "write-probe"
          ],
          "default": "read-safe",
          "description": "Preflight probe level: plan-only has no provider calls; read-safe performs no writes/deletes; write-probe uses explicit opt-in minimal side effects"
        },
        "probe_strategy": {
          "type": "string",
          "enum": [
            "multipart-abort",
            "put-delete"
          ],
          "default": "multipart-abort",
          "description": "Provider-specific write-probe strategy (write-probe mode only)"
        },
        "probe_prefix": {
          "type": "string",
          "default": "_gonimbus/probe/",
          "minLength": 1,
          "pattern": "/$",
          "description": "Prefix under which probe keys are created (write-probe mode only). Must end with '/'."
        }
      }
    },
    "transfer": {
      "type": "object",
      "description": "Transfer behavior configuration",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "copy",
            "move"
          ],
          "default": "copy",
          "description": "Transfer mode (move implies delete on source after successful copy)"
        },
        "concurrency": {
          "type": "integer",
          "minimum": 1,
          "maximum": 128,
          "default": 16,
          "description": "Number of concurrent transfer workers"
        },
        "on_exists": {
          "type": "string",
          "enum": [
            "skip",
            "overwrite",
            "fail"
          ],
          "default": "skip",
          "description": "Behavior when target key already exists"
        },
        "dedup": {
          "type": "object",
          "description": "Deduplication configuration",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "strategy": {
              "type": "string",
              "enum": [
                "etag",
                "key",
                "none"
              ],
              "default": "etag",
              "description": "Deduplication strategy"
            }
          }
        },
        "path_template": {
          "type": "string",
          "description": "Optional path template for mapping source keys to target keys"
        },
        "preflight": {
          "$ref": "#/$defs/preflight"
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output configuration",
      "additionalProperties": false,
      "properties": {
        "destination": {
          "type": "string",
          "default": "stdout",
          "description": "Output destination: stdout or file:/path/to/output.jsonl"
        },
        "progress": {
          "type": "boolean",
          "default": true,
          "description": "Emit progress records during transfer"
        }
      }
    }
  }
}
